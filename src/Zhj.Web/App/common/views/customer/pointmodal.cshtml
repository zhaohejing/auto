<div>
    <form name="pointForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                选择点位
            </h4>
        </div>
        <div class="modal-body">
            <table class="table table-bordered">
                <tr>
                    <th>点位名称</th>
                    <th>操作</th>
                </tr>
                <tr ng-repeat="x in vm.pointList">
                    <td ng-bind="x.pointname"></td>
                    <td>
                        <input name="select" type="radio" ng-click="vm.select(x)" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-footer">
            <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">关闭</button>
            <button type="submit" button-busy="vm.saving" busy-text="保存中..."
                     class="btn btn-primary blue" ng-click="vm.save()"
                     ng-disabled="pointForm.$invalid"><i class="fa fa-save"></i> <span>保存</span></button>
        </div>
    </form>
</div>