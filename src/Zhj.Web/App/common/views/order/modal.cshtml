<div >
    <form name="exampleForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                预定选餐
            </h4>
        </div>

        <div class="modal-body">
            <div class="form-group">
                <label class="col-md-4 control-label">选择餐品</label>
                <div class="col-md-8">
                    <tags-input display-property="inCard"
                                min-tags="1" max-tags="1"
                                add-from-autocomplete-only="true"
                                on-tag-added="tagAdded($tag)" on-tag-removed="tagRemoved($tag)"
                                ng-model="vm.dish" placeholder="选择餐品">
                        <auto-complete min-length="0"
                                       debounce-delay="0" max-results-to-show="10"
                                       template="custom-template"
                                        source="loadTags($query)"></auto-complete>
                    </tags-input>
                </div>

            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">单价</label>
                <div class="col-md-8">
                    <input type="text" display-property="price" readonly required ng-model="vm.order.price"
                           class="form-control small" placeholder="单价">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">购买数量</label>
                <div class="col-md-8">
                    <input type="number" required ng-pattern="/^[1-9]\d{0,}$/" ng-model="vm.order.number"
                           class="form-control small" placeholder="购买数量">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">订餐日期</label>
                <div class="col-md-8">
                    <input type="text" readonly ng-model="vm.order.ordertime"
                           class="form-control small" placeholder="订餐日期">
                </div>
            </div>
            <div class="row"></div>
        </div>


      
    </form>
    <div class="modal-footer">

        <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">关闭</button>
        <button type="submit" button-busy="vm.saving" busy-text="保存中"
                class="btn btn-primary blue" ng-click="vm.save()"
                ng-disabled="exampleForm.$invalid">
            <i class="fa fa-save"></i> <span>保存</span>
        </button>
    </div>
    <script type="text/ng-template" id="custom-template">
        <div class="row">
            <span>==>{{data.dish}} | ￥{{data.price}}<==</span>
        </div>
    </script>
</div>