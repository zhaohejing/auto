<div ng-controller="common.views.report.duerecords as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>会员充值提现</span>
                    </h1>
                </div>
            </div>
        </div>

    </div>

    <div class="portlet light">
        <div class="portlet-body">
            <div class="portlet-body scrollList">
                <div class="portlet-title">
                    <div class="row">
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="col-md-4 control-label">客户名称</label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="vm.name" class="form-control small" placeholder="客户名称">
                                </div>
                            </div>

                        </div>
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="col-md-4 control-label">客户卡号</label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="vm.card" class="form-control small" placeholder="客户卡号">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="form-actions">
                                <button type="button" ng-click="vm.getorders()" class="btn default small">查询</button>
                                <button type="button" ng-click="vm.export()" class="btn default small">导出</button>
                            </div>
                        </div>
                       
                    </div>

                </div>

                <table class="table table-bordered">
                    <tr>
                        <th>序号</th>
                        <th>会员名</th>
                        <th>卡号</th>
                        <th>充值</th>
                        <th>提现</th>
                        <th>操作人</th>
                        <th>操作时间</th>
                    </tr>
                    <tr ng-repeat="x in vm.table.data">
                        <td>{{$index+1}}</td>
                        <td ng-bind="x.customerName"></td>
                        <td ng-bind="x.outCard"></td>
                        <td><span>{{x.topUp |rmb }}</span></td>
                        <td><span>{{x.withDrawal |rmb }}</span></td>
                        <td><span>{{x.userName }}</span></td>
                        <td><span>{{x.creationTime |date :'yyyy-MM-dd' }}</span></td>
                    </tr>
                </table>
                <nav>
                    <ul class="pagination">
                        <li>
                            <a ng-click="vm.table.prev()">
                                <span>上一页</span>
                            </a>
                        </li>
                        <li ng-repeat="page in vm.table.pageList track by $index" ng-class="{active: vm.table.isActivePage(page)}">
                            <a ng-click="vm.table.selectPage(page)">{{ page }}</a>
                        </li>
                        <li>
                            <a ng-click="vm.table.next()">
                                <span>下一页</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>


        </div>
    </div>
</div>
