<div ng-controller="common.views.report.pointOrder as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>每点位每天预定餐表</span>
                    </h1>
                </div>
            </div>
        </div>

    </div>

    <div class="portlet light">
        <div class="portlet-body">


            <div class="portlet-body scrollList">
                <div class="portlet-title">
                    <div class="row">
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="col-md-4 control-label">点位名称</label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="vm.filter.pointName" class="form-control small" placeholder="点位名称">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3">

                            <div class="form-group">
                                <label class="col-md-4 control-label">商品名称</label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="vm.filter.dishName" class="form-control small" placeholder="商品名称">
                                </div>
                            </div>

                        </div>
                        <div class="col-xs-2">
                            <div class="form-group">
                                <p class="input-group">
                                    <input type="text" class="form-control" placeholder="开始时间"
                                           uib-datepicker-popup readonly ng-model="vm.startTime"
                                           is-open="vm.date.leftopen"
                                           datepicker-options="vm.date.dateOptions"
                                           ng-required="true"
                                           current-text="今天"
                                           clear-text="清除"
                                           close-text="关闭" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default"
                                                ng-click="vm.date.openleft()">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </button>
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="col-xs-2">
                            <div class="form-group">
                                <p class="input-group">
                                    <input type="text" class="form-control" placeholder="结束时间"
                                           uib-datepicker-popup readonly ng-model="vm.endTime"
                                           is-open="vm.date.rightopen"
                                           datepicker-options="vm.date.dateOptions"
                                           ng-required="true"
                                           current-text="今天"
                                           clear-text="清除"
                                           close-text="关闭" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default"
                                                ng-click="vm.date.openright()">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </button>
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="col-xs-2">
                            <div class="form-actions">
                                <button type="button" ng-click="vm.getorders()" class="btn default small">查询</button>
                                <button type="button" ng-click="vm.export()" class="btn default small">导出</button>
                            </div>
                        </div>

                    </div>

                </div>

                <table class="table table-bordered">
                    <tr>
                        <th>序号</th>
                        <th>点位名称</th>
                   
                        <th>商品名称</th>
                        <th>数量（份）</th>
                     
                        <th>预定日期</th>
                    </tr>
                    <tr ng-repeat="x in vm.table.data">
                        <td>{{$index+1}}</td>
                        <td ng-bind="x.pointName"></td>
                      
                        <td ng-bind="x.dish"></td>
                        <td ng-bind="x.dishNumber"></td>
                     
                        <td><span>{{x.orderTime  | date : 'yyyy-MM-dd HH:mm'}}</span>  </td>

                    </tr>
                </table>
                <nav>
                    <ul class="pagination">
                        <li>
                            <a ng-click="vm.table.prev()">
                                <span>上一页</span>
                            </a>
                        </li>
                        <li ng-repeat="page in vm.table.pageList track by $index" ng-class="{active: vm.table.isActivePage(page)}">
                            <a ng-click="vm.table.selectPage(page)">{{ page }}</a>
                        </li>
                        <li>
                            <a ng-click="vm.table.next()">
                                <span>下一页</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>


        </div>
    </div>
</div>
